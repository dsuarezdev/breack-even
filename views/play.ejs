<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimal-ui">
    <meta name="description" content="">
    <meta name="author" content="SimCase">

    <!-- App Title (Browser Tab...) -->
    <title><%- app.name %> - SimCase</title>

    <link rel="shortcut icon" href="<%- makeURL('/favicon.png') %>" type="image/png">

    <!-- Bootstrap core CSS -->
    <link href="<%- makeURL('/game_assets/bootstrap/css/bootstrap.min.css') %>" rel="stylesheet">

    <!-- Highcharts -->
    <link href="<%- makeURL('/css/highcharts.css') %>" rel="stylesheet">

    <!-- App base structure -->
    <link href="<%- makeURL('/game_assets/css/style.css') %>" rel="stylesheet">

    <!-- Custom styles for this app -->
    <link href="<%- makeURL('/game_assets/css/app.css') %>" rel="stylesheet">

    <!-- Base template styles for this app -->
    <link href="<%- makeURL('/game_assets/css/template-base.css') %>" rel="stylesheet">

    <!-- App base structure -->
    <link href="<%- makeURL('/css/common.css') %>" rel="stylesheet">

    <!-- Optional Libraries: Remove CSS files you're not using -->
    <link href="<%- makeURL('/css/bootstrap-slider.min.css') %>" rel="stylesheet">

    <!-- Base template styles for this app -->
    <link href="<%- makeURL('/css/theme-purple.css') %>" rel="stylesheet">

    <!-- Google Fonts -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Lato:300,400">


    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body class="game bgicon" style="position:relative;">

    <!-- Gamebox -->
    <div id="appbox">


        <!-- Navbar -->
        <nav class="navbar-ds">
            <ul class="nav-ds">
                <li id="menu-btn-left" class="pull-left hide" data-toggle="modal" data-target="#quitModal"
                   data-title="Are you sure you want to exit?" data-body="If you do, you will lose this game's progress.">
                    <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
                </li>
                <li class="brand pull-left">
                   <small class="fleft"></small>
                   <span style="padding-left:10px; padding-right:10px;">

                       <img id="nav-logo" src="<%- makeURL('/game_assets/assets/icon.png') %>" width="30" alt="" />

                   </span>
                   <small class="fright"><%- app.name %><i id="current-level"></i></small>
                </li>
                <li id="menu-btn-right" class="pull-right">
                    <span class="glyphicon glyphicon-align-justify" aria-hidden="true"></span>
                </li>
            </ul>
        </nav>


        <!-- ***************************** -->
        <!-- ******** GAME SCREENS ******* -->
        <!-- ***************************** -->

        <!-- Screen 1 - WALKTHROUGH -->
        <div id="screen1" class="screen current initial">

            <div class="container v-center">

                <img id="nav-logo" src="<%- makeURL('/game_assets/img/apple-touch-icon-114x114.png') %>" alt="" />

                <h2>Welcome to BaseApp</h2>

                <p class="lead">This is the "Splash Screen".</p>

                <div class="mt20 mb20 col-xs-12 col-sm-8 col-sm-offset-2">
                    <span id="begin" class="btn btn-lg btn-primary">Start Game</span>
                </div>

            </div>
        </div>

        <!-- Screen 2 -->
        <div id="screen2" class="screen">

            <div class="container mt45">

               <div class="row">
                   <div class="col-sm-8 col-sm-offset-2">

                        <h3>Initial Quiz</h3>

                        <div class="form mt20 text-left">
                            <div class="form-group">
                                <label>What's your name?</label>
                                <input id="iq-1" class="form-control input-lg" placeholder="Enter your name" />
                            </div>
                            <div class="form-group mt20">
                                <label>What's your age?</label><br/>
                                <input id="age-slider" style="width:100%;" type="text" data-slider-min="0" data-slider-max="100" data-slider-step="1" data-slider-value="0"/>
                            </div>
                            <div class="form-group mt20">
                                <label>Where do you live?</label>
                                <input id="iq-2" class="form-control input-lg" placeholder="Enter your name" />
                            </div>
                            <span id="to-screen-3" class="btn btn-primary btn-lg btn-block mt40">Next</span>
                        </div>

                   </div>
               </div>

            </div>
        </div>

        <!-- Screen 3 -->
        <div id="screen3" class="screen">

            <div class="container mt45">

                <div class="row">
                    <div class="col-sm-8 col-sm-offset-2">

                        <h3>
                            Select an option
                            <small>
                            <span class="glyphicon glyphicon-info-sign" aria-hidden="true" data-toggle="tooltip" data-placement="bottom" title="This is a bootstrap tooltip. Tooltips are initialized by default in the BaseApp."></span>
                            </small>
                        </h3>

                        <p class="lead">
                            This is a demo, here you can choose one of the items and continue.
                        </p>

                        <div class="row mt20">
                            <div class="col-xs-4">
                                <label>
                                    <img src="http://lorempixel.com/150/150/animals/1" class="img-responsive" />
                                    <br/>
                                    <input id="item-1" type="radio" name="animal" value="1" /> Option 1
                                </label>
                            </div>
                            <div class="col-xs-4">
                                <label>
                                    <img src="http://lorempixel.com/150/150/animals/2" class="img-responsive" />
                                    <br/>
                                    <input id="item-2" type="radio" name="animal" value="2" /> Option 2
                                </label>
                            </div>
                            <div class="col-xs-4">
                                <label>
                                    <img src="http://lorempixel.com/150/150/animals/3" class="img-responsive" />
                                    <br/>
                                    <input id="item-3" type="radio" name="animal" value="3" /> Option 3
                                </label>
                            </div>
                        </div>

                        <span id="to-screen-4" class="btn btn-primary btn-lg btn-block mt40">Next</span>

                    </div>
                </div>

            </div>
        </div>

        <!-- Screen 4 -->
        <div id="screen4" class="screen">

            <div class="container mt45">

                <div class="row">
                   <div class="col-sm-8 col-sm-offset-2">

                        <h3>Final Step</h3>

                        <p class="lead">
                            Sometimes, and based on the previous interactions, the user is presented with some data and must make a decision.
                        </p>

                        <div id="chart-1"></div>

                        <div class="form mt20 text-left">
                            <div class="form-group">
                                <label>
                                    How many animals were on the image?
                                    <span class="glyphicon glyphicon-question-sign" aria-hidden="true" data-trigger="hover" data-toggle="popover" title="Numeric Input" data-content="This is a native numeric input, check the onkeypress event to see the validations."></span>
                                </label>
                                <input id="animal-count" type="number" min="0" step="1" class="form-control input-lg" tabindex="-1" onkeypress='return event.charCode >= 48 && event.charCode <= 57 && this.value < 1000' placeholder="Enter the number of animals" />
                            </div>
                            <span id="to-screen-5" class="btn btn-primary btn-lg btn-block mt40">Next</span>
                        </div>

                   </div>
               </div>

            </div>
        </div>

        <!-- Screen 5 -->
        <div id="screen5" class="screen">

            <div class="container mt45">

                <div class="row">
                   <div class="col-sm-8 col-sm-offset-2">

                        <h3>Final Quiz</h3>

                        <div class="form mt20">
                            <div class="form-group text-center">
                                <label>Did you enjoy the game?</label><br/>
                                <div class="btn-group" data-toggle="buttons" style="width:50%;">
                                    <label class="btn btn-default btn-lg" style="width:50%;">
                                      <input id="final-radio-1" type="radio" name="enjoy" value="si" autocomplete="off"> Yes
                                    </label>
                                    <label class="btn btn-default btn-lg" style="width:50%;">
                                      <input id="final-radio-2" type="radio" name="enjoy" value="no" autocomplete="off"> No
                                    </label>
                                </div>
                            </div>

                            <div class="alert alert-info mt40">
                                At this point of the game, all the data generated by the user interacctions has been stored in an "result" JSON.
                                By clicking the "Submit &amp; Check Results" button the "result" object will be sent to the server using AJAX or WebSockets.
                            </div>

                            <span id="to-screen-6" class="btn btn-primary btn-lg btn-block mt40">Submit &amp; Check Results</span>
                        </div>

                   </div>
               </div>

            </div>
        </div>

        <!-- Screen 6 -->
        <div id="screen6" class="screen">

            <div class="container mt45">

                <div class="row">
                   <div class="col-sm-8 col-sm-offset-2">

                        <h3>Feedback</h3>

                        <div id="chart-2"></div>

                        <label>What's your name?</label>
                        <p id="fb-name" class="lead"></p>

                        <label>What's your age?</label>
                        <p id="fb-age" class="lead"></p>

                        <label>Where do you live?</label>
                        <p id="fb-live" class="lead"></p>

                        <label>Selected item</label>
                        <p id="fb-item" class="lead"></p>

                        <label>Animals on the image</label>
                        <p id="fb-animals" class="lead"></p>

                        <label>Did you enjoy the SimCase?</label>
                        <p id="fb-enjoy" class="lead"></p>

                   </div>
               </div>

            </div>
        </div>

        <!-- ***************************** -->
        <!-- ******* /GAME SCREENS ******* -->
        <!-- ***************************** -->

        <!-- Spinnign loader -->
        <div id="loader" class="">
            <div class="spinner"></div>
        </div>


        <!-- Role Modal -->
        <div class="modal" id="role-modal" tabindex="-1" role="dialog" aria-labelledby="popup-modal-label">
          <div class="modal-dialog" role="document">
            <div class="modal-content">

                <div class="modal-header">
                    Role
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>

                <div class="modal-body" style="padding-top:0;">

                    <div id="role-carousel" class="carousel slide" data-ride="carousel" data-interval="false">

                      <!-- Wrapper for slides -->
                      <div class="carousel-inner" role="listbox">
                        <div class="item active">

                            <div class="item-content">
                                <div class="v-center">

                                    <img id="nav-logo" src="<%- makeURL('/game_assets/img/apple-touch-icon-114x114.png') %>" alt="" />
                                    <p class="lead mt20">
                                        This is the Role Modal, it's usually triggered after players click "Start Game" button in the Spash Screen.
                                    </p>
                                </div>
                            </div>

                            <!-- Controls -->
                            <div class="carousel-controls">
                                <a class="btn btn-sm btn-primary" href="#role-carousel" role="button" data-slide="next">
                                    Next <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                </a>
                            </div>

                        </div>
                        <div class="item">

                            <div class="item-content">
                                <div class="v-center">

                                    <img id="nav-logo" src="<%- makeURL('/game_assets/img/apple-touch-icon-114x114.png') %>" alt="" />
                                    <p class="lead mt20">
                                         You can launch this role modal again from the menu (top-right).
                                    </p>

                                </div>
                            </div>

                            <!-- Controls -->
                            <div class="carousel-controls">
                                <a class="btn btn-sm btn-primary" href="#role-carousel" role="button" data-slide="prev">
                                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> Previous
                                </a>
                                <a class="btn btn-sm btn-primary" href="#role-carousel" role="button" data-slide="next">
                                    Next <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                </a>
                            </div>

                        </div>
                        <div class="item">

                            <div class="item-content">
                                <div class="v-center">

                                    <img id="nav-logo" src="<%- makeURL('/game_assets/img/apple-touch-icon-114x114.png') %>" alt="" />
                                    <p class="lead mt20">
                                        That's it, keep the role modal short and descriptive ;)
                                    </p>
                                    <p class="lead">
                                        Woohoo!
                                    </p>
                                </div>
                            </div>

                            <!-- Controls -->
                            <div class="carousel-controls">
                                <a class="btn btn-sm btn-primary" href="#role-carousel" role="button" data-slide="prev">
                                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> Previous
                                </a>
                                <a class="btn btn-sm btn-primary" data-dismiss="modal" role="button">
                                    <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span> OK
                                </a>
                            </div>

                        </div>
                      </div>

                    </div>

                </div>

            </div>
          </div>
        </div>


        <!-- Menu Modal -->
        <div class="modal" id="menu-modal" tabindex="-1" role="dialog" aria-labelledby="popup-modal-label">
          <span id="close-menu" class="close-menu">
            <span class="circle"><span aria-hidden="true">&times;</span></span>
          </span>
          <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div id="slide-menu" class="modal-body">

                    <ul class="text-center">
                        <li><span id="role-menu-item">Role</span></li>
                        <li><span id="walk-menu-item">Walkthrough</span></li>
                        <li><span id="about">About</span></li>
                    </ul>

                </div>
            </div>
          </div>
        </div>

        <!-- Alert Modal -->
        <div class="modal fade" id="alertModal" tabindex="-1" role="dialog" aria-labelledby="alertModalLabel">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="alertModalTitle"></h4>
              </div>
              <div id="alertModalBody" class="modal-body">
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">OK</button>
              </div>
            </div>
          </div>
        </div>

        <!-- Popup -->
        <div id="popup"></div>

        <!-- Pause Popup -->
        <div id="pause-popup">
            <div class="v-center">
                <div class="padd10">
                    <img src="game_assets/assets/icon-sand.png" class="animated pulse infinite" alt="Pause" />
                    <h3 class="mt40">The instructor has paused the game</h3>
                </div>
            </div>
        </div>

        <!-- Connection Popup -->
        <div id="connection-popup">
            <div class="v-center">
                <div class="padd10">
                    <img src="game_assets/assets/icon-alert.png" class="animated pulse infinite" alt="Disconnection" />
                    <h3 class="mt40">Oops! There was a problem with the connection</h3>
                    <small>But don't worry, click the refresh button and everything will be fine.</small>
                    <p class="mt20">
                        <span id="refresh-btn" class="btn btn-primary btn-lg">Refresh Now</span>
                    </p>
                </div>
            </div>
        </div>

        <!-- Pre-loaders -->
        <span id="pl-splash-bottom"></span>

    </div>


    <!-- Menu Panels -->
    <div id="menutabs" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
         <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title"></h4>
          </div>
          <div class="modal-body">

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>


    <!-- Libraries -->
    <script src="<%- makeURL('/socket.io/socket.io.js') %>"></script>
    <script type="text/javascript" src="<%- makeURL('/js/jquery-1.11.0.min.js') %>"></script>
    <script type="text/javascript" src="<%- makeURL('/js/highcharts.js') %>"></script>
    <script type="text/javascript" src="<%- makeURL('/bootstrap/js/bootstrap.min.js') %>"></script>
    <script type="text/javascript" src="<%- makeURL('/js/bootbox.min.js') %>"></script>
    <script type="text/javascript" src="<%- makeURL('/game_assets/js/fastclick.js') %>"></script>

    <!-- Optional Libraries: Remove scripts if you're not using them -->
    <script type="text/javascript" src="<%- makeURL('/js/bootstrap-slider.min.js') %>"></script>
    <script type="text/javascript" src="<%- makeURL('/js/bootstrap-switch.min.js') %>"></script>
    <script type="text/javascript" src="<%- makeURL('/js/bootstrap-tour.min.js') %>"></script>

    <!-- Objects & Helpers -->
    <script type="text/javascript" src="<%- makeURL('/game_assets/js/utils.js') %>"></script>
    <script type="text/javascript" src="<%- makeURL('/game_assets/js/qappnav.js') %>"></script>

    <!-- App specific -->
    <script type="text/javascript" src="<%- makeURL('/game_assets/js/app.js') %>"></script>
    <script type="text/javascript" src="<%- makeURL('/game_assets/js/menu.js') %>"></script>
    <script type="text/javascript" src="<%- makeURL('/game_assets/js/debrief_utils.js') %>"></script>
    <script type="text/javascript" src="<%- makeURL('/game_assets/js/game_utils.js') %>"></script>

    <!-- Inline Script -->
    <script>

        // Get the local API info
        jQuery(document).ready(function(){
            // API data: Request and then start the game
            jQuery.ajax({
                url: 'oauth_provider',
                method: 'GET',
                success: function( authdata ){

                    var oauthData = authdata;
                    console.log( oauthData );
                    appinit({ io_domain: oauthData.io_domain, io_path: oauthData.io_path, site_url: oauthData.site_url });

                }
            });

        });

        // Google Analytics

    </script>

  </body>
</html>
