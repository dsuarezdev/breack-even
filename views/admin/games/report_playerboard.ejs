<%- include ../header %>

    <div class="container-fluid">

        <!-- Menu Bar -->
        <div id="menu-bar" class="row">

            <div class="col-sm-6 text-left">

                <h3 class="mt5 mb0" style="display:inline-block;">Game Controls</h3>

                <!-- Validate and show only 1 -->
                <!--
                <% if( game.started ){ %>
                    <a href="<%- makeURL('/admin/games/debrief/' + game._id) %>" class="btn btn-md btn-info">
                        Debrief
                    </a>
                <% }else{ %>
                    <a href="<%- makeURL('/admin/games/start/' + game._id) %>" class="btn btn-md btn-info">
                        <span class="btn-label"><i class="fa fa-play"></i></span> Start
                    </a>
                <% } %>
                -->

            </div>

            <div class="col-sm-6 text-right">
                <div class="mt0">

                    <% if( game.status == "finalized" || !game.started ){ var btnStatus = 'disabled'} %>

                    <% if( game.status == 'finalized' ){ %>
                        <a href="<%- makeURL('/admin/games/csv/' + game._id) %>" id="csv-btn" class="btn btn-mb btn-labeled btn-primary">
                            <span class="btn-label"><i class="fa fa-download"></i></span> Download CSV
                        </a>
                    <% }else{ %>

                        <% if( game.started ){ %>

                            <% if( !game.async_mode ){ %>
                                <% if( game.paused ){ %>
                                    <a href="<%- makeURL('/admin/games/unpause/' + game._id) %>" id="unpause-btn" class="btn btn-mb btn-labeled btn-warning <%- btnStatus %>">
                                        <span class="btn-label"><i class="fa fa-play"></i></span> Unpause
                                    </a>
                                <% }else{ %>
                                    <a href="<%- makeURL('/admin/games/pause/' + game._id) %>" id="pause-btn" class="btn btn-mb btn-labeled btn-warning <%- btnStatus %>">
                                        <span class="btn-label"><i class="fa fa-pause"></i></span> Pause
                                    </a>
                                <% } %>
                            <% } %>

                            <a href="<%- makeURL('/admin/games/finalize/' + game._id) %>" id="finalize-btn" class="btn btn-mb btn-labeled btn-danger <%- btnStatus %>">
                                <span class="btn-label"><i class="fa fa-stop"></i></span> Finalize
                            </a>

                        <% }else{ %>

                            <a href="<%- makeURL('/admin/games/start/' + game._id) %>" class="btn btn-md btn-labeled btn-success">
                                <span class="btn-label"><i class="fa fa-play"></i></span> Start
                            </a>

                        <% } %>

                        <a id="add-player-btn" href="#" id="addplayer-btn" class="btn btn-mb btn-labeled btn-info"
                           data-toggle="modal" data-target="#add-new-pair-modal">
                            <span class="btn-label"><i class="fa fa-plus"></i></span> Add Player
                        </a>

                    <% } %>

                </div>
            </div>
        </div>
        <!-- /Menu-bar -->

        <div class="row main">

            <div class="col-xs-12">

                <%
                    var activePlayers = game.players;
                    var activePlayersPercent = (100/game.players.length) * activePlayers.length;
                %>

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong>Players</strong> &nbsp; <small>Total: <%- game.players.length %> &nbsp;|&nbsp; Active: <%- activePlayers.length %> (<%- activePlayersPercent %>%)</small>
                    </div>
                    <div class="panel-body">

                        <div id="table_pair" class="">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Surname</th>
                                        <th>Email</th>
                                        <th>Magic-link</th>
                                        <th>Share</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% game.players.forEach(function(p){ %>

                                        <%
                                            p.name = (typeof p.name == 'undefined') ? '' : p.name;
                                            p.lastname = (typeof p.lastname == 'undefined') ? '' : p.lastname;
                                        %>

                                        <tr>
                                            <td><%- p.name %></td>
                                            <td><%- p.lastname %></td>
                                            <td><%- p.email %></td>
                                            <td>
                                                <a href="<%- site_url + '/play?i=' + p.game_id + '&e=' + p.email + '&t=' + p.token %>" target="_blank">
                                                    <%- site_url + '/play?i=' + p.game_id + '&e=' + p.email + '&t=' + p.token %>
                                                </a>
                                            </td>
                                            <td>
                                                <span class="btn btn-md btn-default btn-block text-center"
                                                      data-toggle="modal"
                                                      data-target="#shareModal"
                                                      data-magiclink="<%- site_url + '/play?i=' + p.game_id + '&e=' + p.email + '&t=' + p.token %>">
                                                    <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
                                                </span>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>

                            <!-- Share Magic Link Modal -->
                            <div class="modal fade" id="shareModal" tabindex="-1" role="dialog">
                              <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                  <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title" id="myModalLabel">Share Magic-link</h4>
                                  </div>
                                  <div class="modal-body text-center">

                                      <p>You are about to share the following Magic-link</p>
                                      <input type="text" id="magiclink-url" class="form-control input-lg" disabled />

                                      <p class="mt20">Type the email address and press the send button</p>
                                      <input type="email" id="email-to" class="form-control input-lg" placeholder="email@simcase.io" />

                                  </div>
                                  <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    <button id="share-send" type="button" class="btn btn-primary">Send</button>
                                  </div>
                                </div>
                              </div>
                            </div>
                            <!-- / Share Magic Link Modal -->

                            <%- include add_player_modal %>

                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>

    <!-- Libraries -->
    <script src="<%- makeURL('/socket.io/socket.io.js') %>"></script>
    <script>
        jQuery(document).ready(function(){

            // GAME
            var gameObj = <%- JSON.stringify(game) %>;

            // SOCKETS
            var o = <%- JSON.stringify(o) %>;
            // Init & Connect Socket
            var socket = io.connect(o.io_domain, {path: o.io_path});

            // Capture the player estimates
            socket.on('result', function(data){ // Imagine that you're sending the results using web sockets
                //console.log(data);
                var activitySpan = document.getElementById('activity-player-' + data.player);
                activitySpan.innerHTML = 'Active';
            });

            // Share Magic-link
            jQuery('#shareModal').on('show.bs.modal', function (event) {
                var button = jQuery(event.relatedTarget);
                var mlink = button.data('magiclink');
                jQuery('#magiclink-url').val(mlink);
                jQuery('#email-to').val('');
                setTimeout(function(){ jQuery('#email-to').focus(); }, 500);
            });

        });
    </script>

