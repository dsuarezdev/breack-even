<%- include ../header %>

    <div class="container-fluid">
      <div class="row">

        <div class="col-xs-12 main">

            <h2 class="mt0 mb20">
                Games <a href="<%- makeURL('/admin/games/create') %>" class="btn btn-mb btn-primary">Add New Game</a>
            </h2>

            <table id="crud-list" class="table table-hover table-striped">
                <thead>
                    <th class="text-left">Name
                    </th>
                    <th class="text-center" data-sort-default>Date
                    </th>
                    <th class="text-center">Status
                    </th>
                    <th class="text-center">Players
                    </th>
                    <th class="text-center no-sort" data-sort-method="none" style="width:1%; white-space: nowrap;">Actions</th>
                </thead>
                <tbody>

                    <% games.forEach(function(game){ %>
                        <tr>
                            <td>
                                <% if(game.status == 'saved'){ %>
                                    <a href="<%- makeURL('/admin/games/update/' + game._id) %>" class=""><%- game.name %></a>
                                <% }else{ %>
                                    <a href="<%- makeURL('/admin/games/gameboard/' + game._id) %>" class=""><%- game.name %></a>
                                <% } %>
                            </td>
                            <td class="capitalize text-center" data-sort="<%- game.created_at.getTime() %>">
                                <% if(game.created_at){ %>
                                    <%
                                        var months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
                                        var cm = game.created_at.getMonth();
                                    %>
                                    <%- months[cm] %>
                                    <%- game.created_at.getDate() %>,
                                    <%- game.created_at.getFullYear() %>
                                <% } %>
                            </td>
                            <td class="text-center">
                                <% if(game.status == 'initialized'){ %> Setup <% } %>
                                <% if(game.status == 'saved'){ %> Setup <% } %>
                                <% if(game.status == 'launched'){ %> Play <% } %>
                                <% if(game.status == 'finalized'){ %> Complete <% } %>
                            </td>
                            <td class="text-center"><%- game.players.length %></td>
                             <td class="text-right" style="width:1%; white-space: nowrap;">
                                <% if(game.status == 'saved'){ %>
                                    <a href="<%- makeURL('/admin/games/update/' + game._id) %>" class="btn btn-success btn-sm">Select</a>
                                <% }else{ %>
                                    <a href="<%- makeURL('/admin/games/gameboard/' + game._id) %>" class="btn btn-success btn-sm">Select</a>
                                <% } %>

                                <a href="<%- makeURL('/admin/games/remove/' + game._id) %>" class="btn btn-danger btn-sm delete">Delete</a>
                            </td>
                        </tr>
                    <% }) %>

                </tbody>
            </table>
        </div>

      </div>
    </div>

    <script src="<%- site_url %>/js/tablesort.min.js"></script>
    <script type="text/javascript">
        jQuery(document).ready(function(){
            var sortedTable = new Tablesort(document.getElementById('crud-list'), {
                descending: true
            });
        });
    </script>

